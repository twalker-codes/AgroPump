<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Colors -->
    <Color x:Key="Gray50">#f9fafb</Color>
    <Color x:Key="Gray100">#f3f4f6</Color>
    <Color x:Key="Gray400">#9ca3af</Color>
    <Color x:Key="Gray500">#6b7280</Color>
    <Color x:Key="Gray800">#1f2937</Color>
    <Color x:Key="Green600">#059669</Color>
    <Color x:Key="White">#FFFFFF</Color>

    <!-- Font Sizes -->
    <x:Double x:Key="FontSizeSmall">12</x:Double>
    <x:Double x:Key="FontSizeNormal">14</x:Double>
    <x:Double x:Key="FontSizeMedium">16</x:Double>
    <x:Double x:Key="FontSizeLarge">18</x:Double>
    <x:Double x:Key="FontSizeXLarge">20</x:Double>

    <!-- Font Icons -->
    <x:String x:Key="IconHome">&#xf015;</x:String>
    <x:String x:Key="IconLocation">&#xf3c5;</x:String>
    <x:String x:Key="IconPrice">&#xf155;</x:String>
    <x:String x:Key="IconUser">&#xf007;</x:String>
    <x:String x:Key="IconGear">&#xf013;</x:String>
    <x:String x:Key="IconPump">&#xf52f;</x:String>

    <!-- Common Styles -->
    <Style x:Key="BaseLabel" TargetType="Label">
        <Setter Property="FontFamily" Value="InterRegular"/>
    </Style>

    <Style x:Key="CardTitleStyle" TargetType="Label" BasedOn="{StaticResource BaseLabel}">
        <Setter Property="FontSize" Value="{StaticResource FontSizeLarge}"/>
        <Setter Property="FontFamily" Value="InterBold"/>
        <Setter Property="TextColor" Value="{StaticResource Gray800}"/>
    </Style>

    <Style x:Key="CardSubtitleStyle" TargetType="Label" BasedOn="{StaticResource BaseLabel}">
        <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}"/>
        <Setter Property="TextColor" Value="{StaticResource Gray500}"/>
    </Style>

    <Style x:Key="NavButtonStyle" TargetType="Grid">
        <Setter Property="Padding" Value="8"/>
        <Setter Property="RowSpacing" Value="4"/>
    </Style>

    <Style x:Key="NavLabelStyle" TargetType="Label" BasedOn="{StaticResource BaseLabel}">
        <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}"/>
        <Setter Property="HorizontalTextAlignment" Value="Center"/>
    </Style>

    <Style x:Key="NavIconStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="Font Awesome 6 Free Solid"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="HorizontalTextAlignment" Value="Center"/>
        <Setter Property="VerticalTextAlignment" Value="Center"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
        <Setter Property="VerticalOptions" Value="Center"/>
    </Style>

    <!-- Frame Styles -->
    <Style x:Key="CardFrameStyle" TargetType="Frame">
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="BorderColor" Value="{StaticResource Gray100}"/>
        <Setter Property="BackgroundColor" Value="{StaticResource White}"/>
        <Setter Property="HasShadow" Value="True"/>
        <Setter Property="Margin" Value="0"/>
    </Style>

    <!-- Layout Styles -->
    <Style x:Key="PageContentLayout" TargetType="Grid">
        <Setter Property="RowSpacing" Value="0"/>
        <Setter Property="Padding" Value="0"/>
    </Style>

    <Style x:Key="CardContentLayout" TargetType="Grid">
        <Setter Property="RowSpacing" Value="0"/>
        <Setter Property="Padding" Value="16"/>
    </Style>

</ResourceDictionary> 